{
    "version": "2.21.0",

    "services": {
        "backend": {
            "build": {
                "context": ".", 
                "dockerfile": "Dockerfile",
                "target": "dev"
            },
            "ports": [
                "7777-7780:7777"
            ],
            "network_mode": "bridge",

            "deploy": {
                "mode": "replicated",
                "replicas": 3
            },

            "env_file": [
                ".env"
            ]
        }
    }
}